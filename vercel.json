{
    "version": 2,
    "builds": [
      { "src": "client/package.json", "use": "@vercel/static-build" },
      { "src": "server/**", "use": "@vercel/node" }
    ],
    "routes": [
      {
        "src": "(.*)",
        "dest": "server/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "client/dist/$1"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }
  